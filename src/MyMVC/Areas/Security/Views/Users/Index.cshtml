@model IEnumerable<MyMvc.Areas.Security.Models.UserViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th style="width:5px"></th>
        <th>
            First Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <span>
                    <a id="icon_@item.Guid" style="font-size: x-small" class="btn btn-link glyphicon glyphicon-plus" onclick="toggleEducPane('@item.Guid')">

                    </a>
                </span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Guid }) |
                @Html.ActionLink("Details", "Details", new { id = item.Guid }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Guid })
            </td>
        </tr>
        <tr class="collapse-me_@item.Guid" style="display:none">
            <td colspan="6">
                <span>Educations</span>
            </td>
        </tr>
        <tr id="@item.Guid" class="collapse-me_@item.Guid" style="display:none">
            <td colspan="6">
                <div class="row">
                    <div class="col-md-12">
                        <ul class="">
                            @foreach (var edu in item.Educations)
                            {
                                <li class="form-group" style="width: 33%">
                                    <div class="col-md-6">@edu.School</div>
                                    <div class="col-md-6">@edu.YearAttended</div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </td>
        </tr>
    }
</table>
<script>
    function toggleEducPane(row) {
        $(".collapse-me_" + row).slideToggle(200);
        $("#icon_" + row).toggleClass("glyphicon-plus");
        $("#icon_" + row).toggleClass("glyphicon-minus");
    }
</script>
